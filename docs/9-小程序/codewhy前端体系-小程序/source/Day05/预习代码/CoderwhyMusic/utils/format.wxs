var countFormat = function(count) {
  var counter = parseInt(count)
  if (counter > 100000000) {
    return (count / 100000000).toFixed(1) + "亿"
  } else if (count > 10000) {
    return (count / 10000).toFixed(1) + "万"
  } else {
    return count + ""
  }
}



function padLeftZero(str) {
  str = str.toString()
  return ("00" + str).slice(str.length);
}

function test() {
