<!--pages/music/music.wxml-->
<van-search
  shape="round"
  background="#f7f7f7"
  placeholder="搜索你喜欢的歌曲"
  bind:focus="handleSearchFocus"
/>

<swiper class="banner" indicator-dots autoplay circular>
  <block wx:for="{{bannerList}}" wx:key="bannerId">
    <swiper-item class="item">
      <image class="image" mode="aspectFill" src="{{item.pic}}"></image>
    </swiper-item>
  </block>
</swiper>

<view class="recommend" wx:if="{{recommendSongs.length > 0}}">
  <area-header title="歌曲推荐" bind:click="recommendHeaderClick"></area-header>
  <block wx:for="{{recommendSongs}}" wx:key="id">
    <song-item-v1 itemInfo="{{item}}" bindtap="handleSongItemClick" data-index="{{index}}"></song-item-v1>
  </block>
</view>

<song-list wx:if="{{hotSongList.length > 0}}" title="热门歌单" songList="{{hotSongList}}"></song-list>
<song-list wx:if="{{recommendSongList.length > 0}}" title="推荐歌单" songList="{{recommendSongList}}"></song-list>

<view class="top">
  <view class="title">巅峰榜</view>
  <view class="list">
    <block wx:for="{{topList}}" wx:key="id">
      <top-list-item bindtap="topItemClick" data-item="{{item}}" data-idx="{{index}}" itemInfo="{{item}}"></top-list-item>
    </block>
  </view>
</view>


