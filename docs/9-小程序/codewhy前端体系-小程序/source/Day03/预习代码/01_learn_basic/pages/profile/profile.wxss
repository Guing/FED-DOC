.outer {
  width: 300rpx;
  height: 300rpx;
  background-color: red;
}

.inner {
  width: 200rpx;
  height: 200rpx;
  background-color: orange;
}

.touch {
  width: 400rpx;
  height: 200rpx;
  background-color: orange;
}

.arguments {
  height: 200rpx;
  background-color: purple;
}

.tab-control {
  display: flex;
  height: 40px;
  line-height: 40px;
}

.tab-control .item {
  flex: 1;
  text-align: center;
}

.tab-control .item.active .title {
  padding: 5px;
  border-bottom: 3px solid #ff8189;
}

.title {
  color: red;
}

